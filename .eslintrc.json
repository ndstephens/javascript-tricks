{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "semi": false,
        "singleQuote": true
      }
    ],
    "no-console": "off",
    "no-plusplus": "off",
    "spaced-comment": "off",
    "func-names": "off",
    "no-prototype-builtins": "off",
    "no-restricted-syntax": [
      2,
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-unused-vars": [
      1,
      {
        "ignoreSiblings": true,
        "argsIgnorePattern": "res|next|e|^err"
      }
    ]
  }
}
